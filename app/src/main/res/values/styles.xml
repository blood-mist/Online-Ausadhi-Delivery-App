<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/button_colors</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>
    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#a7ffeb</item>
        <item name="strokeColor">#90A4AE</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/button_colors</item>
    </style>
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/icons</item>
    </style>
    <style name="RegisterToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/primary</item>
    </style>
    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#0A58A7</item>
                                                                                                                                                                                                    <item name="fab_colorPressed">@android:color/holo_blue_light</item>
        <item name="fab_colorRipple">#0A58A7</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/icons</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/icons</item>
    </style>



</resources>
